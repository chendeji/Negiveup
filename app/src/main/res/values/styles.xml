<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="contentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="appBarText" parent="contentText">
        <item name="android:textSize">@dimen/app_bar_text_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallTitleText" parent="contentText">
        <item name="android:textSize">@dimen/small_title_text_size</item>
    </style>

    <style name="smallBtnText" parent="smallTitleText">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="actionBtnText" parent="contentText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_title_text_size</item>
    </style>

    <style name="bigTitleText" parent="contentText">
        <item name="android:textSize">@dimen/big_title_text_size</item>
    </style>

    <style name="normalBtn" parent="smallBtnText">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:background">@drawable/common_btn_corner_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="toolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/blue</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
    </style>
</resources>